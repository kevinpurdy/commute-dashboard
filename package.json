{
  "name": "commute-dashboard",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npx jest",
    "build": "npm run build:api && npm run build:frontend && npm run build:styles",
    "build:api": "node esbuild.api.js",
    "build:frontend": "node esbuild.frontend.js",
    "build:styles": "sass styles/main.scss public/styles.css",
    "start": "node dist/api.js",
    "watch": "concurrently \"npm run watch:api\" \"npm run watch:frontend\" \"npm run watch:styles\"",
    "watch:api": "nodemon",
    "watch:frontend": "node esbuild.frontend.js --watch",
    "watch:styles": "sass --watch styles/main.scss public/styles.css"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "jest": "^29.7.0",
    "nock": "^14.0.10",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "sass": "^1.92.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
